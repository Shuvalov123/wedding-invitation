  <script>
    const toggleDark = document.createElement('button');
    toggleDark.id = 'darkModeToggle';
    toggleDark.title = '–ü–µ—Ä–µ–∫–ª—é—á–∏—Ç—å –Ω–æ—á–Ω–æ–π —Ä–µ–∂–∏–º üåô';
    toggleDark.textContent = 'üåô';
    document.body.appendChild(toggleDark);

    toggleDark.addEventListener('click', () => {
      document.body.classList.toggle('dark-mode');
      if(document.body.classList.contains('dark-mode')) {
        localStorage.setItem('darkMode', 'enabled');
        toggleDark.textContent = '‚òÄÔ∏è';
      } else {
        localStorage.removeItem('darkMode');
        toggleDark.textContent = 'üåô';
      }
    });

    // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –Ω–æ—á–Ω–æ–≥–æ —Ä–µ–∂–∏–º–∞ –∏–∑ localStorage
    if(localStorage.getItem('darkMode') === 'enabled') {
      document.body.classList.add('dark-mode');
      toggleDark.textContent = '‚òÄÔ∏è';
    }

    // –ü–∞–¥–∞—é—â–∏–µ –ª–µ–ø–µ—Å—Ç–∫–∏
    const petalCount = 25;
    for(let i=0; i<petalCount; i++){
      const petal = document.createElement('div');
      petal.classList.add('petal');
      petal.style.left = Math.random() * window.innerWidth + 'px';
      petal.style.animationDuration = (7 + Math.random()*8) + 's';
      petal.style.animationDelay = (Math.random() * 15) + 's';
      document.body.appendChild(petal);
    }
  </script>
